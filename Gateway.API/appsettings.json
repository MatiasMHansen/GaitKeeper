{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "ReverseProxy": {
        "Routes": {
            "gaitsession-get": {
                "ClusterId": "gaitsession-cluster",
                "Match": {
                    "Path": "/gaitsession/raw/{fileName}",
                    "Methods": [ "GET" ]
                },
                "Transforms": [],
                "Metadata": {
                    "Dapr-AppId": "gaitsessionservice"
                }
            },
            "pointdata-get": {
                "ClusterId": "pointdata-cluster",
                "Match": {
                    "Path": "/pointdata/raw/{fileName}",
                    "Methods": [ "GET" ]
                },
                "Transforms": [],
                "Metadata": {
                    "Dapr-AppId": "gaitpointdataservice"
                }
            },
            "gaitsession-post": {
                "ClusterId": "gaitsession-cluster",
                "Match": {
                    "Path": "/gaitsession/post",
                    "Methods": [ "POST", "OPTIONS" ]
                },
                "Transforms": [],
                "Metadata": {
                    "Dapr-AppId": "gaitsessionservice"
                }
            },
            "pointdata-post": {
                "ClusterId": "pointdata-cluster",
                "Match": {
                    "Path": "/pointdata/post",
                    "Methods": [ "POST", "OPTIONS" ]
                },
                "Transforms": [],
                "Metadata": {
                    "Dapr-AppId": "gaitpointdataservice"
                }
            }
        },
        "Clusters": {
            "gaitsession-cluster": {
                "Destinations": {
                    "gaitsessionservice": {
                        "Address": "http://localhost:3500/v1.0/invoke/gaitsessionservice/method/"
                    }
                }
            },
            "pointdata-cluster": {
                "Destinations": {
                    "gaitpointdataservice": {
                        "Address": "http://localhost:3500/v1.0/invoke/gaitpointdataservice/method/"
                    }
                }
            }
        }
    }
}
