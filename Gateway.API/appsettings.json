{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",

    "ReverseProxy": {
        "Routes": {
            "gaitsession-get": {
                "ClusterId": "gaitsession-cluster",
                "Match": {
                    "Path": "/gaitsession/raw/{fileName}",
                    "Methods": [ "GET" ]
                },
                "Transforms": [
                    {
                        "RequestHeader": "dapr-app-id",
                        "Set": "gaitsessionservice"
                    }
                ]
            },
            "pointdata-get": {
                "ClusterId": "pointdata-cluster",
                "Match": {
                    "Path": "/pointdata/raw/{fileName}",
                    "Methods": [ "GET" ]
                },
                "Transforms": [
                    {
                        "RequestHeader": "dapr-app-id",
                        "Set": "gaitpointdataservice"
                    }
                ]
            },
            "gaitsession-post": {
                "ClusterId": "gaitsession-cluster",
                "Match": {
                    "Path": "/gaitsession/create",
                    "Methods": [ "POST" ]
                },
                "Transforms": [
                    {
                        "RequestHeader": "dapr-app-id",
                        "Set": "gaitsessionservice"
                    }
                ]
            },
            "pointdata-post": {
                "ClusterId": "pointdata-cluster",
                "Match": {
                    "Path": "/pointdata/create",
                    "Methods": [ "POST" ]
                },
                "Transforms": [
                    {
                        "RequestHeader": "dapr-app-id",
                        "Set": "gaitpointdataservice"
                    }
                ]
            }
        },
        "Clusters": {
            "gaitsession-cluster": {
                "Destinations": {
                    "gaitsessionservice": {
                        "Address": "http://localhost:3501"
                    }
                }
            },
            "pointdata-cluster": {
                "Destinations": {
                    "gaitpointdataservice": {
                        "Address": "http://localhost:3502"
                    }
                }
            }
        }
    }
}
